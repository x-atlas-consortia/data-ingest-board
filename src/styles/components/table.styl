.c-table
  color $col-trout

  &__wrap
    padding-bottom 2em

  &__title
    font-size 2rem
    font-weight 700

  &__colTags
    max-height 200px
    overflow-y auto

  &__btns
    +md-max()
      width 90%
      button
        flex-shrink 0
        width 100%
        max-width 100%
        padding-right calc(var(--bs-gutter-x) * .5)
        padding-left calc(var(--bs-gutter-x) * .5)
        margin-top var(--bs-gutter-y)
        margin-left 0

  &--data
    margin-top 2rem
    .c-table__wrap
      background-color white
      border-radius 8px

  &--header
    display inline-block
    margin-left 2.5%
    margin-right 2.5%
    +md-max()
      display block
      margin-left auto
      margin-right auto
      width 90%
      position static
      text-align left

  &--main
    position relative
    bottom 2rem
    z-index 0
    width 95%
    margin-left auto
    margin-right auto
    margin-top 1rem
    margin-bottom 1.5rem
    +md-max()
      width 90%
      margin-top 2rem
      margin-bottom 2rem
    .ant-spin-container .ant-pagination:first-child .ant-pagination-options-quick-jumper
      display none

  &--pDatasets
    .revision-number
      padding 2px 10px
      border-radius 3px

  &__columnToggle
    display inline-block
    width 210px
    margin-left 5px
    +sm()
      margin-top 5px
      margin-left 0
    .ant-select-selector
      height 33px
      overflow-y auto
