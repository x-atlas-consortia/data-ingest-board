body
  background-color $col-gal-grey !important
  margin-bottom 2rem
  overflow-x hidden

.Table
  margin 5rem

.no-data
  padding-top 50px

.lnk--ic
  display inline-flex !important
  align-items center
  text-decoration none
  svg
    margin-left: 0.25rem

td[title="True"]
  color $col-accent

.pull-right
  align-right()


.ant-dropdown-menu-title-content
  a
    text-decoration none

.ant-dropdown-menu-item.is-active 
  background-color var(--bs-primary)
  span
    color white
  &:hover 
    background-color var(--bs-primary) !important

.list-scrollable
  max-height 500px
  overflow-y auto

.ant-btn-more
  .anticon-ellipsis
    vertical-align -.3em

.d-sm
  display none
  +sm()
    display block

.d-md 
  display none
  +md-min()
    display block